<?xml version="1.0" encoding="UTF-8">
<settings>

<!-- 
This settings.xml for group:public incorporates the following stores from AProx:
  * remote:central
  * remote:jboss.org-public
 -->
  <localRepository>/root/.m2/repository-group-public</localRepository>
  <profiles>
    <profile>
      <id>aprox-repos</id>
      <repositories>
        <repository>
          <id>central</id>
          <url>http://repo1.maven.apache.org/maven2/</url>
          <name>null</name>
          <releases>
            <enabled>true</enabled>
          </releases>
          <!-- TODO: Not sure how to detect this... -->
          <snapshots>
            <enabled>true</enabled>
          </snapshots>
        </repository>
        <repository>
          <id>jboss.org-public</id>
          <url>https://repository.jboss.org/nexus/content/groups/public</url>
          <name>public group on Jboss.org Nexus repository</name>
          <releases>
            <enabled>true</enabled>
          </releases>
          <!-- TODO: Not sure how to detect this... -->
          <snapshots>
            <enabled>true</enabled>
          </snapshots>
        </repository>
      </repositories>
      <pluginRepositories>
        <pluginRepository>
          <id>central-plugins</id>
          <url>http://repo1.maven.apache.org/maven2/</url>
          <name>null - PluginRepository</name>
          <releases>
            <enabled>true</enabled>
          </releases>
          <!-- TODO: Not sure how to detect this... -->
          <snapshots>
            <enabled>true</enabled>
          </snapshots>
        </pluginRepository>
        <pluginRepository>
          <id>jboss.org-public-plugins</id>
          <url>https://repository.jboss.org/nexus/content/groups/public</url>
          <name>public group on Jboss.org Nexus repository - PluginRepository</name>
          <releases>
            <enabled>true</enabled>
          </releases>
          <!-- TODO: Not sure how to detect this... -->
          <snapshots>
            <enabled>true</enabled>
          </snapshots>
        </pluginRepository>
      </pluginRepositories>
    </profile>
  </profiles>
  <activeProfiles>
    <activeProfile>aprox-repos</activeProfile>
  </activeProfiles>
</settings>
